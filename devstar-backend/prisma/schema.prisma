generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tool {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  link        String?
  category    String  // Add a category field if needed
  rating      Float?  // Optional field for ratings
  reviews     String[] // Optional field for storing reviews as a JSON array
}

